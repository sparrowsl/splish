{
  "$schema": "https://biomejs.dev/schemas/1.4.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "formatter":{
    "lineWidth": 110
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness":{
        "recommended": true
      }
    }
  },
  "javascript":{
    "formatter":{
      "bracketSameLine": true,
      "enabled": true,
      "lineWidth":110
    }
  }
}
